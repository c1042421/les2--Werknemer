<Window x:Class="oefWerknemer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oefWerknemer"
        mc:Ignorable="d"
        Title="Form1" Height="450
        " Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="Type Werkenemer">
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton GroupName="werknemer" Content="Commissiewerker" Margin="5 0"></RadioButton>
                <RadioButton GroupName="werknemer" Content="StukWerker" Margin="5 0"></RadioButton>
                <RadioButton GroupName="werknemer" Content="Uurwerker" Margin="5 0"></RadioButton>
                <RadioButton GroupName="werknemer" Content="Werknemer" Margin="5 0"></RadioButton>
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Label Content="Naam" Margin="5" Width="100"></Label>
            <TextBox Name="txtNaam" Margin="5" Width="200" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Label Content="Voornaam" Margin="5" Width="100"></Label>
            <TextBox Name="txtVoornaam" Margin="5" Width="200" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5">
            <Label Content="Loon" Margin="5" Width="100"></Label>
            <TextBox Name="txtLoon" Margin="5" Width="200" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5">
            <Label Content="Aantal" Margin="5" Width="100"></Label>
            <TextBox Name="txtAantal" Margin="5" Width="200" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="5">
            <Label Content="Commissie" Margin="5" Width="100"></Label>
            <TextBox Name="txtCommissie" Margin="5" Width="200" Height="25"></TextBox>
            <Button Width="150" Height="25" Margin="5" Content="Toevoegen" Name="txtToevoegen"></Button>
        </StackPanel>
        <TextBox Grid.Row="6" Margin="10 5" IsReadOnly="True" Name="txtOutput"></TextBox>
    </Grid>
</Window>
